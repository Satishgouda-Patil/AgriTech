<% layout('/layout/boilerplate') -%>
<form method="POST" action="/auth/register"">
    <h2 class="col-md-6 offset-3 mb-3 mt-3">Register</h2>
    <div class="col-md-6 offset-3" class="needs-validation" novalidate>
        <label for="username" class="form-lable">username</label>
        <input type="text" name="username" class="form-control" required>
        <div class="valid-feedback">Title Looks good!</div>
        <div class="invalid-feedback">Please enter a correct title.</div>
    </div>
    <div class="col-md-6 offset-3 mb-3 mt-3">
        <label for="password" class="form-lable">password</label>
        <input type="password" name="password" class="form-control" required>
        <div class="valid-feedback">Title Looks good!</div>
        <div class="invalid-feedback">Please enter a correct title.</div>
    </div>
    <div class="col-md-6 offset-3 mb-3 mt-3">
        <label class="form-lable">Farmer ?</label>

          <div>
            <input type="radio" id="huey" name="isFarmer" value="True" />
            <label for="isFarmer">yes</label>
          </div>
        
          <div>
            <input type="radio" id="dewey" name="isFarmer" value="False" />
            <label for="isFarmer">no</label>
          </div>


        <div class="valid-feedback">Title Looks good!</div>
        <div class="invalid-feedback">Please enter a correct title.</div>
    </div>
    <button class="btn btn-success  offset-3 mt-3">Register</button>
</form>