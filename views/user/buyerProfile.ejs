<style>body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

.profile-container {
    max-width: 600px;
    margin: 50px auto;
    background: white;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    padding: 20px;
}

.profile-header {
    text-align: center;
    margin-bottom: 20px;
}

.profile-pic {
    border-radius: 50%;
    width: 150px;
    height: 150px;
}

.username {
    font-size: 24px;
    margin: 10px 0;
}

.role {
    font-size: 18px;
    font-style: italic;
    color: #555;
}

.email {
    font-size: 16px;
    color: #666;
}

.profile-info {
    margin-bottom: 20px;
}

.profile-info h2 {
    font-size: 20px;
    margin-bottom: 10px;
}

.profile-info p {
    line-height: 1.6;
    color: #333;
}

.purchase-history-section {
    margin-bottom: 20px;
}

.purchase-list {
    list-style-type: none;
    padding: 0;
}

.purchase-list li {
    background: #e9ecef;
    padding: 10px;
    margin: 5px 0;
    border-radius: 4px;
}

.profile-actions {
    text-align: center;
}

.btn {
    background-color: #007BFF;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 5px;
    cursor: pointer;
    margin: 5px;
    font-size: 16px;
    transition: background-color 0.3s;
}

.btn:hover {
    background-color: #0056b3;
}

.edit {
    background-color: #28a745;
}

.edit:hover {
    background-color: #218838;
}

.logout {
    background-color: #dc3545;
}

.logout:hover {
    background-color: #c82333;
}
</style>
<body>
    <div class="profile-container">
        <div class="profile-header">
            <img src="https://via.placeholder.com/150" alt="Profile Picture" class="profile-pic">
            <h1 class="username">Jane Smith</h1>
            <p class="role">Buyer</p>
            <p class="email">jane.smith@example.com</p>
        </div>
        
        <div class="profile-info">
            <h2>About Me</h2>
