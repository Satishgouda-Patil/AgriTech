.card {
    margin: 10px;
    background-color: white;
    width: 100%;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    overflow: hidden;
    transition: 0.3s;
}

.card:hover {
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.card-header {
    background-color: #28a745;
    color: white;
    padding: 15px;
    text-align: center;
}

.card-body {
    padding: 20px;
}

.card-body h3 {
    margin-top: 0;
    font-size: 1.2em;
}

.card-body p {
    color: #555;
    margin-bottom: 10px;
}

.card-footer {
    text-align: center;
    padding: 10px;
    background-color: #f9f9f9;
}

button {
    background-color: #28a745;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

button:hover {
    background-color: #218838;
}

</style>
