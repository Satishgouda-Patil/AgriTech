/* Container for cards */
.card-container, .container{
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
    padding: 20px;
}

/* Main card styles */
.card {
    background-color: white;
    width: 100%;
    max-width: 350px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    overflow: hidden;
    transition: box-shadow 0.3s ease;
    margin: 20px;
}

/* Card hover effect */
.card:hover {
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
}

/* Image styling */
.card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
}

/* Body section styling */
.card-body {
    padding: 20px;
}

/* Title inside the body */
.card-body h3 {
    margin-top: 0;
    font-size: 1.2em;
    color: #333;
}

/* Text content */
.card-body p {
    color: #555;
    line-height: 1.6;
    margin-bottom: 10px;
}

/* Footer section styling */
.card-footer {
    text-align: center;
    padding: 10px;
    background-color: #f9f9f9;
}

/* Button styling */
button {
    background-color: #28a745;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-size: 1em;
}

button:hover {
    background-color: #218838;
}

</style>
